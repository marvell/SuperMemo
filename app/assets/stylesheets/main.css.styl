card-width = 600px;
card-height = 250px;
perspective = 800;
animation-speed = .8s

.cards-container
	width: card-width
	height: card-height
	margin: 50px auto
	position: relative

	perspective: perspective

	.card
		width: 100%;
		height: 100%;
		position: absolute;
		opacity: 0
		z-index: 1

		transform-style: preserve-3d
		transition: transform animation-speed, opacity animation-speed
		transform: scale(.8)

		&.active
			opacity: 1
			z-index: 2
			transform: scale(1)

			&.flipped
				transform: rotateX(180deg) scale(1)

		&.slide-down
			transform: translateY(200px)

			&.flipped
				transform: translateY(200px) rotateX(180deg) scale(1)

		&.remembered
			background-color: #90A959

		&.dont-remembered
			background-color: #AC4142

		.side
			width: 100%;
			height: 100%;
			background-color: #FFF;
			color: #000;
			border-radius: 6px;
			font-size: 24px;
			line-height: card-height;
			text-align: center;
			position: absolute;
			backface-visibility: hidden
			box-shadow: 1px 1px 10px rgba(0,0,0, .5)

			&.back
				// background-color: red
				transform: rotateX(180deg)

.cards-form-container
	width: card-width
	margin: 50px auto

	textarea
		width: card-width - 30px
		height: card-height - 30px
		margin-bottom: 30px
		background-color: #FFF;
		color: #000;
		border-radius: 6px;
		font-size: 24px;
		text-align: center;
		box-shadow: 1px 1px 10px rgba(0,0,0, .5)
		outline: none
		padding: 15px
		resize: none

.statistics_page
	table
		font-size: 16px
		line-height: 18px

		td
			border-color: #AAA