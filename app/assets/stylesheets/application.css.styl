//= require_self
//= require_tree .

html, body
	height: 100%

body
	font: 12px/14px sans-serif
	margin: 0
	background-color: #333
	color: #fff
	text-shadow: 0 0 1px rgba(0,0,0,.3)
	box-shadow: inset 0 0 100px rgba(0,0,0,.5)

a, a:focus, a:hover
	color: #fff

table
	width 100%
	border-collapse: collapse

	td
		border: 1px solid
		padding: 4px 6px

input[type=submit], input[type=button]
	display: inline-block;
	margin-bottom: 0;
	text-align: center;
	vertical-align: middle;
	cursor: pointer;
	white-space: nowrap;
	border-radius: 6px;
	user-select: none;
	border: 1px solid #FFF
	background-color: #FFF
	text-shadow: none
	font-size: 16px
	color: #333
	line-height: 16px
	font-weight: bold
	padding: 10px 20px
	box-sizing: border-box
	outline: none

	&:active
		background-color: #ebebeb

.container
	width: 800px
	margin: 0 auto

	.header
		padding: 20px 0

		.brand
			font-size: 24px
			line-height: 24px
			float: left

		nav
			float: right

			a
				margin-left: 15px
				padding-bottom: 10px
				text-decoration: none
				font-size: 16px;
				line-height: 24px
				// font-weight: bold;
				border-bottom: 2px solid transparent;

				&:hover, &.active
					border-bottom-color: #fff

	.main
		padding-top: 50px
